%h1 Listing tickets
- unless @tickets.empty?
  %table.table
    %thead
      %tr
        %th Customer name
        %th Customer email
        %th Subject
        %th Department
        %th Body
        %th
        %th
        %th
    %tbody
      - @tickets.each do |ticket|
        %tr
          %td= ticket.customer_name
          %td= ticket.customer_email
          %td= ticket.subject
          %td= ticket.department
          %td= ticket.body
          %td= link_to 'Show', ticket
          %td= link_to 'Edit', edit_ticket_path(ticket)
          %td= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' }
- else
  %h5
    You don't have any tickets          
%br
= link_to 'New Ticket', new_ticket_path, class: 'btn btn-success'