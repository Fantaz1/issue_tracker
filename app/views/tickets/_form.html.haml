= form_for(@ticket) do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2
        = pluralize(@ticket.errors.count, "error")
        prohibited this ticket from being saved:
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :customer_email
    %br/
    = f.email_field :customer_email, class: 'form-control', required: true
  .field
    = f.label :customer_name
    %br/
    = f.text_field :customer_name, class: 'form-control', required: true
  .field
    = f.label :subject
    %br/
    = f.text_field :subject, class: 'form-control'
  .field
    = f.label :department
    %br/
    = f.text_field :department, class: 'form-control'
  .field
    = f.label :body
    %br/
    = f.text_area :body, class: 'form-control'

  .actions
    = f.submit class: 'btn btn-default'